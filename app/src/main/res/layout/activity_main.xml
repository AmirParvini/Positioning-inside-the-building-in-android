<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/indorpositioning_image" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/about"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/other_menu_id"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/menubackground"
            android:padding="20dp"
            app:layout_constraintEnd_toStartOf="@+id/show_building_menu_id"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/other" />

        <ImageView
            android:id="@+id/show_building_menu_id"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/menubackground"
            android:padding="12dp"
            app:layout_constraintEnd_toStartOf="@+id/add_building_menu_id"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/other_menu_id"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/building" />

        <ImageView
            android:id="@+id/add_building_menu_id"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/menubackground"
            android:padding="20dp"
            app:layout_constraintEnd_toStartOf="@+id/map_menu_id"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/show_building_menu_id"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/addproperties" />

        <ImageView
            android:id="@+id/map_menu_id"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/menubackground"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/add_building_menu_id"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/map" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/about"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:text="About"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>